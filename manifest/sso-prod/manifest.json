{
  "$schema": "https://raw.githubusercontent.com/OfficeDev/microsoft-teams-app-schema/preview/DevPreview/MicrosoftTeams.schema.json",
  "manifestVersion": "devPreview",
  "version": "1.0",
  "id": "36b1586d-b1da-45d2-9b32-899c3757b6f8",
  "packageName": "com.taskmeow",
  "developer": {
    "name": "Yuri Dogandjiev",
    "websiteUrl": "https://taskmeow.com",
    "privacyUrl": "https://taskmeow.com/privacypolicy",
    "termsOfUseUrl": "https://taskmeow.com/termsofuse"
  },
  "name": {
    "short": "Task Meow (SSO)",
    "full": "Task Meow (SSO) for Microsoft Teams"
  },
  "description": {
    "short": "Task Meow to do list app.",
    "full": "Task Meow is a simple to do list app that helps you track the important things in your life."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#ffffff",
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "ChannelMeeting.ReadBasic.Group",
          "type": "Delegated"
        },
        {
          "name": "ChannelMeetingParticipant.Read.Group",
          "type": "Delegated"
        },
        {
          "name": "ChannelMeetingStage.Write.Group",
          "type": "Delegated"
        },
        {
          "name": "MeetingStage.Write.Chat",
          "type": "Delegated"
        },
        {
          "name": "OnlineMeeting.ReadBasic.Chat",
          "type": "Delegated"
        },
        {
          "name": "OnlineMeetingParticipant.Read.Chat",
          "type": "Delegated"
        }
      ]
    }
  },
  "configurableTabs": [
    {
      "configurationUrl": "https://taskmeow.com/config/?inTeamsSSO=true",
      "canUpdateConfiguration": true,
      "scopes": ["team", "groupChat"],
      "meetingSurfaces": ["sidePanel", "stage"]
    }
  ],
  "staticTabs": [
    {
      "contentUrl": "https://taskmeow.com/?inTeamsSSO=true",
      "entityId": "myTasks",
      "name": "My Tasks",
      "scopes": ["personal"]
    },
    {
      "contentUrl": "https://taskmeow.com/profile/?inTeamsSSO=true",
      "entityId": "myProfile",
      "name": "My Profile",
      "scopes": ["personal"]
    }
  ],
  "bots": [
    {
      "botId": "36b1586d-b1da-45d2-9b32-899c3757b6f8",
      "scopes": ["personal", "team", "groupChat"]
    }
  ],
  "composeExtensions": [
    {
      "botId": "36b1586d-b1da-45d2-9b32-899c3757b6f8",
      "canUpdateConfiguration": true,
      "commands": [
        {
          "id": "searchQuery",
          "context": ["compose", "commandBox"],
          "description": "Test command to run query",
          "title": "Search",
          "type": "query",
          "parameters": [
            {
              "name": "searchQuery",
              "title": "Search Query",
              "description": "Search for task title",
              "inputType": "text"
            }
          ]
        },
        {
          "id": "SignOutCommand",
          "type": "action",
          "title": "Sign Out",
          "context": ["commandBox", "compose"],
          "description": "Sign out from authenticated services.",
          "initialRun": false,
          "fetchTask": true
        },
        {
          "id": "createTask",
          "type": "action",
          "title": "Create Task",
          "context": ["commandBox", "compose"],
          "description": "Create and share a new task in this chat.",
          "initialRun": false,
          "fetchTask": true
        }
      ],
      "messageHandlers": [
        {
          "type": "link",
          "value": {
            "domains": ["taskmeow.com", "taskmeow.ngrok.io"]
          }
        }
      ]
    }
  ],
  "meetingExtensionDefinition": {
    "supportsAnonymousGuestUsers": true,
    "scenes": []
  },
  "permissions": ["messageTeamMembers", "identity"],
  "validDomains": ["taskmeow.com"],
  "webApplicationInfo": {
    "id": "36b1586d-b1da-45d2-9b32-899c3757b6f8",
    "resource": "api://taskmeow.com/botid-36b1586d-b1da-45d2-9b32-899c3757b6f8"
  }
}
